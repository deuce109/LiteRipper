<UserControl Name="child" xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LiteRipper.UI.Controls.IsoRipper">
  <StackPanel>
    <TextBlock Text="{Binding SelectedDriveLabel}"/>
    <Button Click="OpenDialog">Browse</Button>
    <TextBlock Margin="5" MinHeight="25" Text="{Binding Path}"/>
    <Button Click="BurnImage">Burn</Button>
    <ProgressBar Value="{Binding Progress}"/>
  </StackPanel>
</UserControl>
